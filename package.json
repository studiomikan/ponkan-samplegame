{
  "name": "ponkan3-sample-game",
  "version": "1.0.0",
  "description": "ponkan3 sample game",
  "main": "main.js",
  "author": "okayu",
  "private": true,
  "scripts": {
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "start-win": "electron .",
    "start": "http-server docs -p 8081 -o http://localhost:8081/index.html"
  },
  "build": {
    "appId": "net.studiomikan.ponkan3.template",
    "productName": "Ponkan3Template",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "devDependencies": {
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "http-server": "^0.11.1"
  }
}
